{
  "name": "@madebyconnor/bamboo-ui",
  "sideEffects": false,
  "version": "0.0.0-semantically-released",
  "description": "A React UI component library made by Connor",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "files": [
    "dist",
    "README.md",
    "*.css"
  ],
  "scripts": {
    "start": "yarn docs",
    "docs": "start-storybook -p 6006",
    "docs:build": "build-storybook -c .storybook -o public",
    "build": "tsc && tsc --project tsconfig.cjs.json && yarn copy:css",
    "copy:css": "yarn copy:css:es && yarn copy:css:cjs",
    "copy:css:es": "cd src && find .  -name '*.module.css' -exec rsync -R {} ../dist/es \\;",
    "copy:css:cjs": "cd src && find .  -name '*.module.css' -exec rsync -R {} ../dist/cjs \\;",
    "copy:css:global": "cp -a ./src/styles/*.css ./",
    "clean:css": "rm *.css",
    "lint": "foundry run eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --format junit -o __reports__/junit/eslint-results.xml",
    "test": "jest --watch",
    "test:unit": "jest --coverage --silent",
    "test:ci": "jest --coverage --runInBand --json --outputFile=__reports__/jest-results.json",
    "prerelease": "yarn build && yarn copy:css:global",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connor-baer/bamboo-ui.git"
  },
  "author": "Connor Baer <hello@connorbaer.co",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/connor-baer/bamboo-ui/issues"
  },
  "homepage": "https://github.com/connor-baer/bamboo-ui#readme",
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "@types/nprogress": "^0.2.0",
    "classnames": "^2.3.1",
    "downshift": "^6.0.7",
    "es-cookie": "^1.2.0",
    "lodash.setwith": "^4.3.2",
    "nprogress": "^0.2.0",
    "open-color": "^1.6.3",
    "react-feather": "^2.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.14.8",
    "@storybook/addon-a11y": "^6.3.6",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-controls": "^6.3.6",
    "@storybook/addon-docs": "^6.3.6",
    "@storybook/addon-storysource": "^6.3.6",
    "@storybook/addon-viewport": "^6.3.6",
    "@storybook/addons": "^6.3.6",
    "@storybook/builder-webpack5": "^7.5.0",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/react": "^6.3.6",
    "@sumup/foundry": "^4.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^27.0.1",
    "babel-jest": "^27.0.6",
    "expect": "^27.0.6",
    "glob": "^7.1.2",
    "jest": "^27.0.6",
    "jest-axe": "^5.0.1",
    "jest-cli": "^27.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0",
    "webpack": "^5.47.1",
    "webpack-merge": "^5.7.3"
  },
  "peerDependencies": {
    "react": ">= 16.8.0 < 18.0.0",
    "react-dom": ">= 16.8.0 < 18.0.0"
  }
}
